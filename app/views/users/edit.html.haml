= render 'items/top_bar'
.container
  %nav.bread-crums
    %ul.bread-crums-ul
      %li.bread-crums-list
        = link_to 'メルカリ'
        = icon('fas','chevron-right', class: 'icon-arrow-right')
      %li.bread-crums-list
        = link_to 'マイページ'
        = icon('fas','chevron-right', class: 'icon-arrow-right')
      %li.bread-crums-list.li-last-child
        = link_to 'ログアウト'

  .l-container.clearfix
    .l-content
      %section.l-chapter-container.mypage-identification
        %h2.l-chapter-head
          本人情報の登録
          .l-single-inner
            %p.l-single-inner__p
              お客さまの本人情報をご登録ください。
            %p.l-single-inner__p
              登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
            %p.text-right
              = link_to "本人確認書類のアップロードについて"
              %i.icon-arrow-right
                = icon('fas','chevron-right')
            .form-group
              %label.form-group__label
                お名前
              %p.form-group__p
                田中 太郎
            .form-group
              %label.form-group__label
                お名前カナ
              %p.form-group__p
                タナカ タロウ
            .form-group
              %label.form-group__label
                生年月日
              %p.form-group__p
                1888/09/09
            .form-group
              %label.form-group__label
                郵便番号
              %span.form-arbitrary
                任意
              /仮置きのパスです
              = form_for @personal_info,url: "https://www.mercari.com/jp/mypage/identification/save/" do |f|
                = f.text_field :postal_code, placeholder: "例）1234567", class:"input-default"
                .form-group
                  %label.form-group__label
                    都道府県
                  %span.form-arbitrary
                    任意
                  .select-wrap
                    = icon('fas','chevron-down', class: 'icon-arrow-bottom')
                    = f.select :prefecture_code, ["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"] ,{prompt: "--"},{class:"select-default"}

                .form-group
                  %label.form-group__label
                    市区町村
                  %span.form-arbitrary
                    任意
                    = f.text_field :postal_code, placeholder: "例) 横浜市緑区", class:"input-default"
                .form-group
                  %label.form-group__label
                    番地
                  %span.form-arbitrary
                    任意
                    = f.text_field :postal_code, placeholder: "例) 青山1−1−1", class:"input-default"
                .form-group
                  %label.form-group__label
                    建物名
                  %span.form-arbitrary
                    任意
                    = f.text_field :postal_code, placeholder: "例) 柳ビル103", class:"input-default"
                = f.submit "登録する" ,class:"btn-default btn-red"

    = render 'layouts/l-sidebar'
= render 'items/bottom_bar'

= link_to root_path,class: "sell-btn" do
  %div 出品
  %i.icon-camera
    = icon "fas","camera"