.user-confirmation-container
  = render 'layouts/bread-crums'

  .user-confirmation-l-container.clearfix
    .user-confirmation-l-content
      %section.user-confirmation-l-chapter-container.mypage-identification
        %h2.user-confirmation-l-chapter-head
          本人情報の登録
          .user-confirmation-l-single-inner
            %p.user-confirmation-l-single-inner__p
              お客さまの本人情報をご登録ください。
            %p.user-confirmation-l-single-inner__p
              登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
            %p.text-right
              = link_to "本人確認書類のアップロードについて"
              %i.icon-arrow-right
                = icon('fas','chevron-right')
            .user-confirmation-form-group
              %label.user-confirmation-form-group__label
                お名前
              %p.user-confirmation-form-group__p
                田中 太郎
            .user-confirmation-form-group
              %label.user-confirmation-form-group__label
                お名前カナ
              %p.user-confirmation-form-group__p
                タナカ タロウ
            .user-confirmation-form-group
              %label.user-confirmation-form-group__label
                生年月日
              %p.user-confirmation-form-group__p
                1888/09/09
            .user-confirmation-form-group
              %label.user-confirmation-form-group__label
                郵便番号
              %span.user-confirmation-form-arbitrary
                任意
              /仮置きのパスです
              = form_for @personal_info,url: "https://www.mercari.com/jp/mypage/identification/save/" do |f|
                = f.text_field :postal_code, placeholder: "例）1234567", class:"user-confirmation-input-default"
                .user-confirmation-form-group
                  %label.user-confirmation-form-group__label
                    都道府県
                  %span.user-confirmation-form-arbitrary
                    任意
                  .select-wrap
                    = icon('fas','chevron-down', class: 'icon-arrow-bottom')
                    = f.select :prefecture_code, ["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"] ,{prompt: "--"},{class:"user-confirmation-select-default"}

                .user-confirmation-form-group
                  %label.user-confirmation-form-group__label
                    市区町村
                  %span.user-confirmation-form-arbitrary
                    任意
                    = f.text_field :postal_code, placeholder: "例) 横浜市緑区", class:"user-confirmation-input-default"
                .user-confirmation-form-group
                  %label.user-confirmation-form-group__label
                    番地
                  %span.user-confirmation-form-arbitrary
                    任意
                    = f.text_field :postal_code, placeholder: "例) 青山1−1−1", class:"user-confirmation-input-default"
                .user-confirmation-form-group
                  %label.user-confirmation-form-group__label
                    建物名
                  %span.user-confirmation-form-arbitrary
                    任意
                    = f.text_field :postal_code, placeholder: "例) 柳ビル103", class:"user-confirmation-input-default"
                = f.submit "登録する" ,class:"user-confirmation-btn-default user-confirmation-btn-red"
                .user-confirmation-form-group.text-right
                  = link_to "本人情報の登録について"
                  %i.icon-arrow-right
                    = icon('fas','chevron-right')
    = render 'layouts/l-sidebar'

= link_to root_path,class: "sell-btn" do
  %div 出品
  %i.icon-camera
    = icon "fas","camera"