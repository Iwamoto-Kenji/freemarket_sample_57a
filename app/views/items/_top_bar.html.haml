.default-container
  %header.header
    .header__inner
      .header__top
        %h1
          %a{href: "https://www.mercari.com/jp/"}
            %img{alt: "mercari", height: "36", src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?273499512", width: "134"}/
        %form.header__form{action: "https://www.mercari.com/jp/search/"}
          %input.input-default{name: "keyword", placeholder: "何かお探しですか？", type: "search", value: ""}/
          %i.icon-search 
            = link_to root_path do
              = icon 'fas', 'search'
      .header-nav-box.clearfix
        %nav.list-left
          %ul.header-nav
            %li
              %h2
                %a.header-nav__root.list-parent{href: "https://www.mercari.com/jp/category/"}
                  %i.header-cat-brand-icon 
                    = icon 'fas', 'list'
                  %span カテゴリーから探す
            %li
              %h2
                %a.header-nav__root.list-parent{href: "https://www.mercari.com/jp/brand/"}
                  %i.header-cat-brand-icon
                    = icon 'fas', 'tag'
                  %span ブランドから探す
        .list-right
          %ul.header-user-nav
            %li.liked-items-link
              %a.header-menu-link{:href => "https://www.mercari.com/jp/mypage/like/history/"}
                %i.icon-like-border
                  = icon 'far', 'heart'
                %span いいね！一覧
            %li{"data-id": "header-user-nav", "data-key": "notification_list", "data-url": "https://www.mercari.com/jp/mypage/notification_and_todo_json/"}
              %a.header-menu-link{"data-url": "https://www.mercari.com/jp/mypage/notification_and_todo_json/", href: "https://www.mercari.com/jp/mypage/notification/"}
                %i.icon-bell
                  = icon 'far', 'bell'
                %span お知らせ
            %li{"data-id": "pc-header-user-nav", "data-key": "todo_list", "data-url": "https://www.mercari.com/jp/mypage/notification_and_todo_json/"}
              %a.header-menu-link{"data-url": "https://www.mercari.com/jp/mypage/notification_and_todo_json/", href: "https://www.mercari.com/jp/mypage/todo/"}
                %i.icon-check
                  = icon 'fas', 'check'
                %span やることリスト
            %li
              %a.header-user-icon.header-menu-link{href: "https://www.mercari.com/jp/mypage/"}
                %figure
                  %div
                    %img{alt: "", src: "//static.mercdn.net/images/member_photo_noimage_thumb.png", width: "32"}/
                %span マイページ
