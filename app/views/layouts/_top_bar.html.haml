.default-container
  %header.topbar
    .topbar__inner
      .topbar__top
        %h1
          = link_to root_path do
            =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?273499512", alt: "mercari", height: "36", width: "134"
        %form.topbar__form{action: "https://www.mercari.com/jp/search/"}
          %input.input-default{name: "keyword", placeholder: "何かお探しですか？", type: "search", value: ""}/
          %i.icon-search 
            = link_to root_path do
              = icon 'fas', 'search'
      .topbar-nav-box.clearfix
        %nav.list-left
          %ul.topbar-nav
            %li
              %h2
                = link_to root_path,class: "topbar-nav__root" do
                  %i.topbar-cat-brand-icon 
                    = icon 'fas', 'list'
                  %span カテゴリーから探す
            %li
              %h2
                = link_to root_path,class: "topbar-nav__root" do
                  %i.topbar-cat-brand-icon
                    = icon 'fas', 'tag'
                  %span ブランドから探す
        .list-right
          %ul.topbar-user-nav
            %li.liked-items-link
              = link_to root_path,class: "topbar-menu-link" do
                %i.icon-like-border
                  = icon 'far', 'heart'
                %span いいね！一覧
            %li{"data-id": "topbar-user-nav", "data-key": "notification_list", "data-url": "https://www.mercari.com/jp/mypage/notification_and_todo_json/"}
              = link_to root_path,class: "topbar-menu-link" do
                %i.icon-bell
                  = icon 'far', 'bell'
                %span お知らせ
            %li{"data-id": "topbar-user-nav", "data-key": "todo_list", "data-url": "https://www.mercari.com/jp/mypage/notification_and_todo_json/"}
              = link_to root_path,class: "topbar-menu-link" do
                %i.icon-check
                  = icon 'fas', 'check'
                %span やることリスト
            %li
              = link_to  user_path(current_user),class: "topbar-user-icon" do
                %figure
                  %div
                    = image_tag "//static.mercdn.net/images/member_photo_noimage_thumb.png", width: "32"
                %span マイページ
= link_to new_item_path,class: "sell-btn" do
  %div 出品
  %i.icon-camera
    = icon "fas","camera"
